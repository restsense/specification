{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://github.com/restsense/specification/blob/main/schemas/1.0.0/spec.json",
    "title": "RestSense Specification",
    "description": "RestSense Specification",
    "type": "object",
    "required": [
        "resources",
        "traces"
    ],
    "properties": {
        "resources": {
            "type": "array",
            "items": {
                "$ref": "Resource.json"
            }
        },
        "traces": {
            "type": "array",
            "items": {
                "$ref": "Trace.json"
            }
        },
        "metrics": {
            "type": "array",
            "items": {
                "$ref": "Metric.json"
            }
        }
    }
}